// packages/backend/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  websites  Website[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Website {
  id            String   @id @default(uuid())
  owner         User     @relation(fields: [ownerId], references: [id])
  ownerId       String
  businessName  String
  industry      String
  description    String
  logoUrl       String
  primaryColor  String
  secondaryColor String
  content       String
  template      String
  deployUrl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
