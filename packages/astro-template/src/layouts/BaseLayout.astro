---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description: string;
  // Website data
  businessName: string;
  logoUrl?: string | null;
  contactEmail: string;
  phoneNumber: string;
  address: string;
  primaryColor: string;
  secondaryColor: string;
  facebook: string;
  twitter: string;
  instagram: string;
  linkedin: string;
  metaTitle: string;
  metaDescription: string;
  metaKeywords: string;
}

const {
  title,
  description,
  businessName,
  logoUrl,
  contactEmail,
  phoneNumber,
  address,
  primaryColor,
  secondaryColor,
  facebook,
  twitter,
  instagram,
  linkedin,
  metaTitle,
  metaDescription,
  metaKeywords,
} = Astro.props;

// Set CSS variables for colors
const style = `
  :root {
    --primaryColor: ${primaryColor};
    --secondaryColor: ${secondaryColor};
  }
`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title || metaTitle || businessName}</title>
    <meta
      name="description"
      content={metaDescription || description}
    />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style is:global set:html={style}></style>
  </head>
  <body class="min-h-screen bg-white">
    <Header
      businessName={businessName}
      logoUrl={logoUrl}
      primaryColor={primaryColor}
    />
    <main>
      <slot />
    </main>
    <Footer
      {businessName}
      {description}
      {logoUrl}
      {contactEmail}
      {phoneNumber}
      {address}
      {primaryColor}
      {facebook}
      {twitter}
      {instagram}
      {linkedin}
    />
  </body>
</html>
