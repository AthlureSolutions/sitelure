---
import BaseLayout from '../layouts/BaseLayout.astro';
import websiteData from '../data/websiteData.json';
---
<BaseLayout>
  <section class="text-center">
    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl lg:text-6xl">
      Welcome to {websiteData.businessName}
    </h1>
    <p class="mt-4 text-xl text-gray-600">
      {websiteData.description}
    </p>
    <a href="/create-website" class="mt-8 inline-block bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
      Get Started
    </a>
  </section>
</BaseLayout>
