---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Import the website data directly
import websiteData from '../data/websiteData.json';

const placeholderImage = "https://freesvg.org/img/Placeholder.png";
---

<BaseLayout 
  businessName={websiteData.businessName}
  description={websiteData.description}
  logoUrl={websiteData.logoUrl}
  primaryColor={websiteData.primaryColor}
  secondaryColor={websiteData.secondaryColor}
  contactEmail={websiteData.businessEmail}
  phoneNumber={websiteData.phoneNumber}
  address={websiteData.address}
  facebook={websiteData.facebookUrl}
  twitter={websiteData.twitterUrl}
  instagram={websiteData.instagramUrl}
  linkedin={websiteData.linkedinUrl}
  metaTitle={websiteData.metaTitle}
  metaDescription={websiteData.metaDescription}
  metaKeywords={websiteData.metaKeywords}
>
  <style is:global define:vars={{ primaryColor: websiteData.primaryColor, secondaryColor: websiteData.secondaryColor }}>
    :root {
      --primaryColor: var(--primaryColor);
      --secondaryColor: var(--secondaryColor);
    }
  </style>

  <!-- Hero Section -->
  <section class="relative h-screen flex items-end justify-between bg-black">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
      <Image 
        src={websiteData.logoUrl || placeholderImage}
        alt={`${websiteData.businessName} Background`}
        class="w-full h-full object-cover"
        width={1920}
        height={1080}
      />
    </div>
    <div class="container mx-auto px-6 z-10 pb-20 flex justify-between items-end w-full">
      <div class="max-w-2xl">
        <h1 class="text-6xl md:text-8xl font-black text-white mb-8 leading-tight">
          {websiteData.businessName.toUpperCase()}
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 max-w-xl">
          {websiteData.description}
        </p>
      </div>
      <div class="flex flex-col gap-6">
        <a 
          href="#membership" 
          class="btn-primary text-center text-lg"
        >
          Start Your Journey
        </a>
        <a 
          href="#contact" 
          class="btn-secondary text-center text-lg"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-32 bg-black relative overflow-hidden">
    <div class="container mx-auto px-6">
      <div class="flex flex-col items-center">
        <div class="relative w-full max-w-5xl mx-auto">
          <div class="relative z-10 rounded-2xl overflow-hidden inline-block">
            <Image 
              src={placeholderImage}
              alt="Gym Interior"
              class="w-[800px] h-[600px] object-cover transition-opacity duration-300 hover:opacity-90"
              width={800}
              height={600}
            />
          </div>
          <div class="absolute top-32 -right-20 z-20 rounded-2xl overflow-hidden md:block hidden">
            <Image 
              src={placeholderImage}
              alt="Training Session" 
              class="w-[500px] h-[500px] object-cover transition-opacity duration-300 hover:opacity-90 shadow-xl"
              width={500}
              height={500}
            />
          </div>
        </div>

        <div class="max-w-3xl text-center mt-32">
          <h2 class="text-6xl md:text-7xl font-black text-white mb-8 leading-tight">About Us</h2>
          <p class="text-gray-300 text-lg mb-6">
            At FitLife Gym, we believe in transforming lives through fitness. Our state-of-the-art facility is designed to inspire and motivate, while our expert trainers are dedicated to helping you achieve your fitness goals.
          </p>
          <p class="text-gray-300 text-lg mb-8">
            Whether you're just starting your fitness journey or looking to take your training to the next level, we provide the perfect environment for success.
          </p>
          <a href="#membership" class="btn-primary inline-block text-lg">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-32 bg-black">
    <div class="container mx-auto px-6">
      <h2 class="text-6xl md:text-7xl font-black text-white mb-20 leading-tight">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        {[
          {
            title: "Personal Training",
            description: "One-on-one customized training programs with expert coaches"
          },
          {
            title: "Group Classes",
            description: "High-energy group workouts including HIIT, yoga, and strength training"
          },
          {
            title: "Nutrition Coaching",
            description: "Personalized meal plans and nutritional guidance for optimal results"
          }
        ].map((service) => (
          <div class="relative group">
            <div class="overflow-hidden rounded-2xl mb-8">
              <Image 
                src={placeholderImage}
                alt={service.title}
                class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-110"
                width={400}
                height={320}
              />
            </div>
            <h3 class="text-3xl font-black text-white mb-4">{service.title}</h3>
            <p class="text-gray-400 text-lg">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-32 bg-black border-t border-white/10">
    <div class="container mx-auto px-6">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-6xl md:text-7xl font-black text-white mb-20 text-center leading-tight">Get In Touch</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
          <!-- Contact Info -->
          <div class="space-y-12">
            <div>
              <h3 class="text-4xl font-black text-white mb-8">Contact Info</h3>
              <div class="space-y-8">
                <div class="flex items-center gap-6">
                  <div class="w-12 h-12 rounded-xl bg-[var(--primaryColor)]/10 flex items-center justify-center">
                    <svg class="w-6 h-6" style={`color: var(--primaryColor)`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-gray-400 text-sm mb-1">Email</p>
                    <a href={`mailto:${websiteData.contactEmail}`} class="text-white text-lg hover:text-[var(--primaryColor)] transition-colors">
                      {websiteData.contactEmail}
                    </a>
                  </div>
                </div>

                <div class="flex items-center gap-6">
                  <div class="w-12 h-12 rounded-xl bg-[var(--primaryColor)]/10 flex items-center justify-center">
                    <svg class="w-6 h-6" style={`color: var(--primaryColor)`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-gray-400 text-sm mb-1">Phone</p>
                    <a href={`tel:${websiteData.phoneNumber}`} class="text-white text-lg hover:text-[var(--primaryColor)] transition-colors">
                      {websiteData.phoneNumber}
                    </a>
                  </div>
                </div>

                <div class="flex items-center gap-6">
                  <div class="w-12 h-12 rounded-xl bg-[var(--primaryColor)]/10 flex items-center justify-center">
                    <svg class="w-6 h-6" style={`color: var(--primaryColor)`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-gray-400 text-sm mb-1">Address</p>
                    <span class="text-white text-lg">{websiteData.address}</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Media Links -->
            <div>
              <h3 class="text-4xl font-black text-white mb-8">Follow Us</h3>
              <div class="flex gap-6">
                {websiteData.facebookUrl && (
                  <a 
                    href={websiteData.facebookUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-12 h-12 rounded-xl bg-[var(--primaryColor)]/10 flex items-center justify-center text-[var(--primaryColor)] hover:bg-[var(--primaryColor)]/20 transition-colors"
                    aria-label="Facebook"
                  >
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                )}
                {websiteData.instagramUrl && (
                  <a 
                    href={websiteData.instagramUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-12 h-12 rounded-xl bg-[var(--primaryColor)]/10 flex items-center justify-center text-[var(--primaryColor)] hover:bg-[var(--primaryColor)]/20 transition-colors"
                    aria-label="Instagram"
                  >
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.897 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.897-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <form class="space-y-8">
            <div>
              <label for="name" class="block text-white text-lg mb-3">Name</label>
              <input 
                type="text" 
                id="name" 
                class="w-full bg-white/5 border border-white/10 rounded-xl px-6 py-4 text-white focus:outline-none focus:border-[var(--primaryColor)] transition-colors"
              >
            </div>
            <div>
              <label for="email" class="block text-white text-lg mb-3">Email</label>
              <input 
                type="email" 
                id="email" 
                class="w-full bg-white/5 border border-white/10 rounded-xl px-6 py-4 text-white focus:outline-none focus:border-[var(--primaryColor)] transition-colors"
              >
            </div>
            <div>
              <label for="message" class="block text-white text-lg mb-3">Message</label>
              <textarea 
                id="message" 
                rows="6" 
                class="w-full bg-white/5 border border-white/10 rounded-xl px-6 py-4 text-white focus:outline-none focus:border-[var(--primaryColor)] transition-colors"
              ></textarea>
            </div>
            <button type="submit" class="w-full btn-primary text-lg py-4">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .btn-primary {
    @apply px-8 py-3 text-white font-semibold rounded-xl transition-all duration-200;
    background-color: var(--primaryColor);
    box-shadow: 0 8px 24px -8px var(--primaryColor);
  }
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 28px -8px var(--primaryColor);
  }
  .btn-secondary {
    @apply px-8 py-3 text-white font-semibold rounded-xl transition-all duration-200 border-2;
    border-color: var(--primaryColor);
    box-shadow: 0 8px 24px -8px var(--primaryColor);
  }
  .btn-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 28px -8px var(--primaryColor);
    background-color: var(--primaryColor);
  }
</style>
