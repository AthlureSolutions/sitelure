---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';
import websiteData from '../data/websiteData.json';
import type { WebsiteData } from '../types/website';

const data = websiteData as WebsiteData;
const { about } = data.site;
---

<BaseLayout title={`${about.title} - ${data.site.name}`} description={about.subtitle}>
  <Header config={data.site} />
  <main>
    <PageHero
      title={about.title}
      description={about.subtitle}
      backgroundImage={about.heroImage}
    />

    <!-- Mission Section -->
    <section class="section section-dark relative">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/85"></div>
        <div
          class="absolute inset-0 opacity-5"
          style={{
            backgroundImage: `linear-gradient(rgba(255, 255, 255, 0.2) 1px, transparent 1px),
              linear-gradient(90deg, rgba(255, 255, 255, 0.2) 1px, transparent 1px)`,
            backgroundSize: '5px 5px'
          }}
        ></div>
      </div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-heading font-bold text-white mb-6">{about.mission.title}</h2>
          <p class="text-xl text-white/80">{about.mission.description}</p>
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="section section-dark relative">
      <div class="absolute inset-0 bg-black/90"></div>
      <div class="container-custom relative z-10">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-heading font-bold text-white mb-6">{about.story.title}</h2>
            <p class="text-white/80">{about.story.content}</p>
          </div>
          <div>
            <img
              src={about.story.image}
              alt="Our Story"
              class="w-full h-full object-cover rounded-lg shadow-xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="section section-dark relative">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/85"></div>
        <div
          class="absolute inset-0 opacity-5"
          style={{
            backgroundImage: `linear-gradient(rgba(255, 255, 255, 0.2) 1px, transparent 1px),
              linear-gradient(90deg, rgba(255, 255, 255, 0.2) 1px, transparent 1px)`,
            backgroundSize: '5px 5px'
          }}
        ></div>
      </div>
      <div class="container-custom relative z-10">
        <h2 class="text-3xl font-heading font-bold text-white text-center mb-12">Our Values</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {about.values.map((value) => (
            <div class="bg-primary/10 backdrop-blur-lg p-8 rounded-lg border border-white/10">
              <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center mb-6">
                <i class={`fas fa-${value.icon} text-xl text-action`}></i>
              </div>
              <h3 class="text-xl font-heading font-bold text-white mb-4">{value.title}</h3>
              <p class="text-white/80">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="section section-dark relative">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-black/95"></div>
        <div
          class="absolute inset-0 opacity-5"
          style={{
            backgroundImage: `linear-gradient(rgba(255, 255, 255, 0.2) 1px, transparent 1px),
              linear-gradient(90deg, rgba(255, 255, 255, 0.2) 1px, transparent 1px)`,
            backgroundSize: '5px 5px'
          }}
        ></div>
      </div>
      <div class="container-custom relative z-10">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {about.stats.map((stat) => (
            <div class="text-center">
              <div class="text-4xl md:text-5xl font-bold text-action mb-2">{stat.value}</div>
              <div class="text-white/80">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer config={data.site} />
</BaseLayout>