---
import type { SiteConfig } from '../types/website';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
const { businessInfo } = config.footer;
---

<section id="contact" class="section section-dark relative">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-black/85"></div>
    <div
      class="absolute inset-0 opacity-5"
      style={{
        backgroundImage: `linear-gradient(rgba(255, 255, 255, 0.2) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 255, 255, 0.2) 1px, transparent 1px)`,
        backgroundSize: '5px 5px'
      }}
    ></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12">
      <div>
        <h2 class="text-4xl font-heading font-bold text-white mb-6">
          Start Your Fitness Journey
        </h2>
        <p class="text-lg text-white/80 mb-8">
          Ready to transform your life? Get in touch to schedule a free consultation and gym tour. Let's discuss your fitness goals and create a personalized plan for your success.
        </p>
        
        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-primary/10 backdrop-blur-lg rounded-lg flex items-center justify-center flex-shrink-0 border border-white/10">
              <i class="fas fa-map-marker-alt text-xl text-white"></i>
            </div>
            <div>
              <h3 class="font-heading font-bold text-lg text-white">Our Location</h3>
              <p class="text-white/80">{businessInfo.address}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-primary/10 backdrop-blur-lg rounded-lg flex items-center justify-center flex-shrink-0 border border-white/10">
              <i class="fas fa-phone text-xl text-white"></i>
            </div>
            <div>
              <h3 class="font-heading font-bold text-lg text-white">Call Us</h3>
              <p class="text-white/80">{businessInfo.phone}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-primary/10 backdrop-blur-lg rounded-lg flex items-center justify-center flex-shrink-0 border border-white/10">
              <i class="fas fa-envelope text-xl text-white"></i>
            </div>
            <div>
              <h3 class="font-heading font-bold text-lg text-white">Email Us</h3>
              <p class="text-white/80">{businessInfo.email}</p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-primary/10 backdrop-blur-lg p-8 rounded-lg border border-white/10">
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white placeholder-white/50 focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white placeholder-white/50 focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
          </div>

          <div>
            <label for="service" class="block text-sm font-medium text-white mb-2">Interested In</label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            >
              <option value="">Select a Service</option>
              <option value="personal-training">Personal Training</option>
              <option value="group-classes">Group Classes</option>
              <option value="nutrition">Nutrition Coaching</option>
              <option value="membership">Gym Membership</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-white mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              placeholder="Tell us about your fitness goals..."
              class="w-full px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white placeholder-white/50 focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            ></textarea>
          </div>

          <button type="submit" class="w-full btn btn-white">
            Start Your Journey
          </button>
        </form>
      </div>
    </div>
  </div>
</section>