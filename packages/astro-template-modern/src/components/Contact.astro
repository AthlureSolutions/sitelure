---
import type { SiteConfig } from '../types/website';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
const { contact } = config;
---

<section id="contact" class="section section-dark relative">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-black/85"></div>
    <div
      class="absolute inset-0 opacity-5"
      style={{
        backgroundImage: `linear-gradient(rgba(255, 255, 255, 0.2) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 255, 255, 0.2) 1px, transparent 1px)`,
        backgroundSize: '5px 5px'
      }}
    ></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12">
      <div>
        <h2 class="text-4xl font-heading font-bold text-white mb-6">
          {contact.title}
        </h2>
        <p class="text-lg text-white/80 mb-8">
          {contact.description}
        </p>
        
        <div class="space-y-6">
          {contact.locations.map((location) => (
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary/10 backdrop-blur-lg rounded-lg flex items-center justify-center flex-shrink-0 border border-white/10">
                <i class="fas fa-map-marker-alt text-xl text-white"></i>
              </div>
              <div>
                <h3 class="font-heading font-bold text-lg text-white">{location.name}</h3>
                <p class="text-white/80">{location.address}</p>
                <p class="text-white/80">{location.phone}</p>
                <p class="text-white/80">{location.email}</p>
                <p class="text-white/80">{location.hours}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="bg-primary/10 backdrop-blur-lg p-8 rounded-lg border border-white/10">
        <h3 class="text-2xl font-heading font-bold text-white mb-6">{contact.form.title}</h3>
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            {contact.form.fields.map((field) => (
              field.type !== 'textarea' && (
                <div>
                  <label for={field.name} class="block text-sm font-medium text-white mb-2">{field.label}</label>
                  <input
                    type="text"
                    id={field.name}
                    name={field.name}
                    class="w-full px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white placeholder-white/50 focus:ring-2 focus:ring-primary focus:border-transparent"
                    required={field.required}
                    placeholder={field.placeholder}
                  />
                </div>
              )
            ))}
          </div>
          {contact.form.fields.map((field) => (
            field.type === 'textarea' && (
              <div>
                <label for={field.name} class="block text-sm font-medium text-white mb-2">{field.label}</label>
                <textarea
                  id={field.name}
                  name={field.name}
                  rows="4"
                  class="w-full px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white placeholder-white/50 focus:ring-2 focus:ring-primary focus:border-transparent"
                  required={field.required}
                  placeholder={field.placeholder}
                ></textarea>
              </div>
            )
          ))}
          <button type="submit" class="w-full btn btn-white">
            {contact.form.submitText || "Send Message"}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>