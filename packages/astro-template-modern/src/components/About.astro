---
import type { SiteConfig } from '../types/website';
import { placeholderImage } from '../types/website';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
---

<section id="about" class="section section-dark">
  <div class="container-custom">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <h2 class="text-5xl font-heading font-bold text-white">
          Transform Your Life Through Fitness
        </h2>
        <p class="text-xl text-white/80">
          We're more than just a gym - we're a community dedicated to helping you achieve 
          your fitness goals. Our expert trainers and state-of-the-art facilities provide 
          everything you need to build strength, improve health, and boost confidence.
        </p>
        <div class="grid grid-cols-2 gap-8">
          <div class="space-y-2">
            <h3 class="text-3xl font-bold text-white">15+</h3>
            <p class="text-white/80">Expert Trainers</p>
          </div>
          <div class="space-y-2">
            <h3 class="text-3xl font-bold text-white">1000+</h3>
            <p class="text-white/80">Members Strong</p>
          </div>
          <div class="space-y-2">
            <h3 class="text-3xl font-bold text-white">50+</h3>
            <p class="text-white/80">Weekly Classes</p>
          </div>
          <div class="space-y-2">
            <h3 class="text-3xl font-bold text-white">24/7</h3>
            <p class="text-white/80">Gym Access</p>
          </div>
        </div>
        <a href="/contact" class="btn inline-block mt-4">Start Your Journey</a>
      </div>
      <div class="relative h-[600px] group overflow-hidden rounded-lg">
        <img
          src={placeholderImage}
          alt="Training at our gym"
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-black/20"></div>
        <div
          class="absolute inset-0 opacity-10"
          style={{
            backgroundImage: `linear-gradient(rgba(255, 255, 255, 0.3) 1px, transparent 1px),
              linear-gradient(90deg, rgba(255, 255, 255, 0.3) 1px, transparent 1px)`,
            backgroundSize: '5px 5px'
          }}
        ></div>
        <div class="absolute bottom-6 left-6 bg-black p-6 rounded-lg shadow-xl">
          <p class="text-white font-heading font-bold text-xl">
            "Strength Builds Character"
          </p>
        </div>
      </div>
    </div>
  </div>
</section>